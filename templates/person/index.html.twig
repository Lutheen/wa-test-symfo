{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
    <h1>Personnes enregistr√©es</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Prename</th>
                <th>Birthdate</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.name }}</td>
                <td>{{ person.prename }}</td>
                <td>{{ person.birthdate ? person.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ person.getAge() }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-grid gap-2 col-6 mx-auto">
        <a href="{{ path('person_new') }}" class="btn btn-primary">Create new</a>
    </div>
{% endblock %}
